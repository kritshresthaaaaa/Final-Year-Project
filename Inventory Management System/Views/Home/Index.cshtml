@{
    ViewBag.Title = "Index";
}

<h1>Dashboard</h1>

<!-- Canvas Element where the chart will be rendered -->
<canvas id="statsChart" width="400" height="200"></canvas>

@section Scripts {
    <!-- Include Chart.js via CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Script to create the line chart -->
    <script type="text/javascript">
        // Your data arrays - replace with dynamic data if necessary
        var productData = [20, 40, 60, 80, 100, 120, 140, 160];
        var categoryData = [15, 30, 45, 60, 75, 90, 105, 120];
        var brandData = [10, 20, 30, 40, 50, 60, 70, 80];

        var ctx = document.getElementById('statsChart').getContext('2d');
        var statsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August'],
                datasets: [{
                    label: 'Products',
                    data: productData,
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1,
                    fill: false
                },
                {
                    label: 'Categories',
                    data: categoryData,
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    fill: false
                },
                {
                    label: 'Brands',
                    data: brandData,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}
