@model Inventory_Management_System.Models.Stock.EmployeeDetail

@{
    ViewData["Title"] = "Create";
}
<div class="flex-col">
    <div>
        <h1 class="text-2xl font-bold">Employee Details </h1>
    </div>

    <hr class="mt-2 bg-gray-400 border" />
    <form asp-action="Create">
        <div class="content-holder flex-col space-y-4 mt-4">

            <div class="border rounded-md p-2 bg-white">
                <div class="box w-full">
                    <div class="mt-2">

                        <div class="titleHolder flex-col space-y-4 mb-2">

                            <div class=" w-full flex justify-around">
                                <div class="  flex-col w-[45%] ">
                                    <label>Full Name</label>

                                    <input asp-for="FullName" type="text" required placeholder="Enter Name" class="h-8 border mt-2 rounded px-2 py-4 w-full bg-gray-50 focus:outline-blue-200" />
                                </div>
                                <div class="  flex-col w-[45%] ">
                                    <label>Date of Birth</label>

                                    <input asp-for="DOB" type="date" required class="h-8 border mt-2 rounded px-2 py-4 w-full bg-gray-50 focus:outline-blue-200" />
                                </div>

                            </div>

                            <div class=" w-full flex justify-around">
                                <div class="flex-col w-[45%]">
                                    <label >Gender</label>
                                    <select asp-for="Gender" class=" h-8 border mt-2 rounded  px-2 py-1 pr-8 w-full bg-gray-50 focus:outline-blue-200">
                                        <option value="" disabled selected>Select Gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>

                                <div class="  flex-col w-[45%] ">
                                    <label>Mobile Number</label>

                                    <input asp-for="Phone" type="text" required placeholder="10-digit number" class="h-8 border mt-2 rounded px-2 py-4 w-full bg-gray-50 focus:outline-blue-200" />
                                    <span asp-validation-for="Phone" class="text-red-600"></span>
                                </div>
                            </div>

                            <div class=" w-full flex justify-around">
                                <div class="  flex-col w-[45%] ">
                                    <label>Email</label>

                                    <input asp-for=Email type="email" required placeholder="Enter Email" class="h-8 border mt-2 rounded px-2 py-4 w-full bg-gray-50 focus:outline-blue-200" />
                                    <span asp-validation-for="Email" class="text-red-600"></span>
                                </div>
                                <div class="  flex-col w-[45%] ">
                                    <label>Password</label>

                                    <input asp-for="Password" type="password" required placeholder="Enter Password" class="h-8 border mt-2 rounded px-2 py-4 w-full bg-gray-50 focus:outline-blue-200" />
                                    <span asp-validation-for="Password" class="text-red-600"></span>
                                </div>

                            </div>

                            <div class="w-full flex justify-around">
                                <div class="  flex-col w-[45%] ">
                                    <label>Address</label>
                                    <input asp-for="Address" type="text" required placeholder="Enter Address" class="h-8 border mt-2 rounded px-2 py-4 w-full bg-gray-50 focus:outline-blue-200" />
                                </div>
                                <div class="flex-col w-[45%]">
                                    <label>Registration Date</label>
                                    <input id="registrationDate" type="date" disabled class="h-8 border text-gray-400 mt-2 rounded px-2 py-4 w-full bg-gray-50 focus:outline-blue-200" />
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="float-right">
                <button type="submit" class="border bg-[#7258DB] px-4 py-2 mt-2 rounded text-white ">Save</button>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script>
        window.onload = function () {
            var today = new Date().toISOString().split('T')[0];
            document.getElementById('registrationDate').value = today;
        };
    </script>

}
