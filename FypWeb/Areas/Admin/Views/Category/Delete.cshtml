@model CategoryDetail

@{
    ViewData["Title"] = "Delete";
}

<div class="flex-col p-2 ml-[12rem] ">
    <div>
        <h1 class="text-2xl font-bold">Delete Category</h1>
    </div>
    <hr class="mt-2 bg-gray-400 border" />
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryID" />
        <div class="content-holder flex-col space-y-4 mt-4">
            <h3>Are you sure you want to delete this?</h3>
            <!--Info Box -->
            <div class="border rounded-md p-2 bg-white">
                <div class="box w-full">
                    <h3 class="text-xl font-bold">Category Information</h3>
                    <div class="mt-2">
                        <div class="titleHolder w-full mb-2">                    
                            <p class="font-medium"> @Html.DisplayFor(model => model.CategoryName)</p>
                        </div>

                    </div>
                </div>
            </div>


        </div>
        <div class="float-right">
            <button type="submit" class="border bg-[#7258DB] px-4 py-2 mt-2 rounded text-white ">Delete</button>
        </div>
    </form>
</div>

