@model CategoryDetail

@{
    ViewData["Title"] = "Edit";
}

<div class="flex-col p-2 ml-[12rem]">
    <div>
        <h1 class="text-2xl font-bold">Add Categories</h1>
    </div>
    <hr class="mt-2 bg-gray-400 border" />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CategoryID" />
        <div class="content-holder flex-col space-y-4 mt-4">

            <!--Info Box -->
            <div class="border rounded-md p-2 bg-white">
                <div class="box w-full">
                    <h3 class="text-xl font-bold">Category Information</h3>
                    <div class="mt-2">
                        <div class="titleHolder w-full mb-2">
                            <h2 class="text-l font-semibold ">Category title</h2>
                            <input asp-for="CategoryName" class="w-full border rounded-md h-8 px-2 py-4 focus:outline-blue-200"
                                   type="text" />

                            <span asp-validation-for="CategoryName" class="text-red-600"></span>
                        </div>

                    </div>
                </div>
            </div>


        </div>
        <div class="float-right">
            <button type="submit" class="border bg-[#7258DB] px-4 py-2 mt-2 rounded text-white ">Save</button>
        </div>
    </form>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
