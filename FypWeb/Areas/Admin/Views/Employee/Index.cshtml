@model IEnumerable<EmployeeDetail>

@{
    ViewData["Title"] = "Index";
}

<div class="relative overflow-hidden bg-white border sm:rounded-lg">
    <div class="flex flex-col px-4 py-3 space-y-3 lg:flex-row lg:items-center lg:justify-between lg:space-y-0 lg:space-x-4">
        <div class="flex items-center flex-1 space-x-4">
            <h5>
                <span class="text-black">Employee Information</span>
                @* <span class="text-gray-500">@ViewBag.CategoryCount</span> *@
            </h5>

        </div>
        <div class="flex flex-col flex-shrink-0 space-y-3 md:flex-row md:items-center lg:justify-end md:space-y-0 md:space-x-3">
            <a asp-action="Create" type="button" class="flex items-center justify-center px-4 py-2 text-sm font-medium text-white rounded-lg bg-[#7258DB]  focus:ring-primary-300 ">
                <svg class="h-3.5 w-3.5 mr-2" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path clip-rule="evenodd" fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" />
                </svg>
                Add an Employee
            </a>


        </div>
    </div>
    <div class="overflow-x-auto ">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-black uppercase  border  ">
                <tr class="">
                    <th scope="col" class="px-4 py-3  flex justify-center">Id</th>
                    <th scope="col" class="px-4 py-3  ">Employees Name</th>
                    <th scope="col" class=" px-4 py-3   justify-center">Phone</th>
                    <th scope="col" class="px-4 py-3  justify-center"> Gender</th>
                    <th scope="col" class="px-4 py-3 flex  justify-center"> Email</th>
                    <th scope="col" class="px-4 py-3   justify-center"> Password</th>
                    <th scope="col" class="px-4 py-3   ">Register Date</th>
                    <th scope="col" class="px-4 py-3  flex justify-center ">Operations</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-b border-gray-600">

                        <td class="px-2 py-2  flex justify-center ">
                            <span class="bg-primary-100 text-primary-800 text-xs font-medium px-2 py-0.5 rounded dark:bg-primary-900 dark:text-primary-300">@Html.DisplayFor(modelItem => item.Id)</span>
                        </td>

                        <td class="px-4 py-2 font-medium whitespace-nowrap  ">
                            <p>@Html.DisplayFor(modelItem => item.FullName)</p>

                        </td>
                        <td class="px-4 py-2 font-medium whitespace-nowrap  ">
                            <p>@Html.DisplayFor(modelItem => item.Phone)</p>

                            @*     <p>@Html.DisplayFor(modelItem => item.ProductCount)</p> *@

                        </td>
                        <td class="px-4 py-2 font-medium whitespace-nowrap  ">
                            <p>@Html.DisplayFor(modelItem => item.Gender)</p>
                        </td>
                        <td class="px-4 py-2 font-medium flex justify-center whitespace-nowrap  ">
                            <p>@Html.DisplayFor(modelItem => item.Email)</p>
                        </td>
                        <td class="px-4 py-2 font-medium  justify-center whitespace-nowrap  ">
                            <p>@Html.DisplayFor(modelItem => item.Password)</p>
                        </td>
                        <td class="px-4 py-2 font-medium whitespace-nowrap  ">
                            <p>@Html.DisplayFor(modelItem => item.RegistrationDate)</p>
                        </td>
                        <td class="px-4 py-2 font-medium whitespace-nowrap flex gap-x-3  flex justify-center">
                            <a asp-action="Edit" asp-route-id="@item.Id">
                                Edit
                            </a>
                            &nbsp;

                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
