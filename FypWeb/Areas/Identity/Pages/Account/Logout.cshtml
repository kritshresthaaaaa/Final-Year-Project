@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header class="text-center py-8">
    <h1 class="text-3xl font-semibold">@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="mt-4" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">Click here to Logout</button>
            </form>
        }
        else
        {
            <p class="mt-4">You have successfully logged out of the application.</p>
        }
    }
</header>
