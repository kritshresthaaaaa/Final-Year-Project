@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="max-w-lg mx-auto p-10">
    <div>
        <h1 class="text-3xl font-bold mb-2">@ViewData["Title"]</h1>
        <h2 class="text-xl mb-4">Enter your email.</h2>
        <div class="border-t border-gray-300 pt-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
                <div class="mb-4">
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mt-2"></label>
                    <input asp-for="Input.Email" class="bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:outline-blue-200 block w-full p-2.5 placeholder-gray-400 " autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
                </div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Reset Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
