@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="max-w-md mx-auto">
    <div class="mb-8">
        <p class="mb-4">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p class="mb-4"><strong class="text-red-600">Deleting this data will permanently remove your account, and this cannot be recovered.</strong></p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" type="submit">Download</button>
        </form>
        <p class="mt-4">
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
