@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="max-w-4xl  px-4">

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="bg-white border rounded-md overflow-hidden">
        <div class="px-2 py-2 ">
            <div class="grid grid-cols-1 gap-8 items-start">
                <div class=" w-full">
                    <form id="profile-form" method="post" class="space-x-6 flex justify-around " enctype="multipart/form-data">
                        <div>

                            <img class="w-40 h-40 rounded-full object-cover border-4 border-gray-200" src="@Model.Input.ImageUrl" alt="Profile picture" />
                            <div class="mt-4 flex justify-center md:justify-start">
                                <label for="profileImageUpload" class="cursor-pointer text-sm font-medium text-blue-600 hover:text-blue-500 focus:outline-none focus:underline">
                                    <span>Change profile picture</span>
                                    <input type="file" id="profileImageUpload" name="file" class="hidden" onchange="previewFile()" />
                                </label>
                            </div>
                        </div>

                        <div class=" w-[40%]">
                            <div class="">
                                <label asp-for="Username" class="block text-sm font-medium text-gray-900">Username</label>
                                <input asp-for="Username" class="mt-1 block w-full rounded-md border focus:ring-blue-500 p-1" placeholder="Your username" disabled />
                            </div>
                            <div class="mt-2">
                                <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-900">Phone Number</label>
                                <input asp-for="Input.PhoneNumber" class="mt-1 block w-full rounded-md border p-1 focus:border-blue-300 focus:ring-blue-300 focus:ring-1 focus:outline-none" placeholder="Your phone number" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-red-500"></span>
                            </div>
                            <div class="mt-2">
                                <label asp-for="Input.FullName" class="block text-sm font-medium text-gray-900">Name</label>
                                <input asp-for="Input.FullName" class="mt-1 block w-full rounded-md border p-1 focus:border-blue-300 focus:ring-blue-300 focus:ring-1 focus:outline-none" placeholder="Your fullname" />
                                <span asp-validation-for="Input.FullName" class="text-red-500"></span>
                            </div>
                            <button type="submit" class="inline-flex mt-2 justify-center py-3 px-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                                Save
                            </button>
                        </div>
                       
                        
                   
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
