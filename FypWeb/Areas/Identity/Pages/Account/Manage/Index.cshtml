@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="max-w-4xl  px-4 py-8">
    <h2 class="text-2xl font-semibold text-gray-900 mb-2">@ViewData["Title"]</h2>
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="bg-white border rounded-md overflow-hidden">
        <div class="px-6 py-8 lg:p-10">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
                <div class="md:col-span-1">
                    <div class="flex justify-center md:justify-start">
                        <img class="w-40 h-40 rounded-full object-cover border-4 border-gray-200" src="https://via.placeholder.com/150" alt="Profile picture" />
                    </div>
                    <div class="mt-4 flex justify-center md:justify-start">
                        <label for="profileImageUpload" class="cursor-pointer text-sm font-medium text-blue-600 hover:text-blue-500 focus:outline-none focus:underline">
                            <span>Change profile picture</span>
                            <input type="file" id="profileImageUpload" name="profileImageUpload" class="hidden" onchange="previewFile()" />
                        </label>
                    </div>
                </div>
                <div class="md:col-span-2">
                    <form id="profile-form" method="post" class="space-y-6">
                        <div class="text-red-500" asp-validation-summary="ModelOnly" role="alert"></div>
                        <div>
                            <label asp-for="Username" class="block text-sm font-medium text-gray-900">Username</label>
                            <input asp-for="Username" class="mt-1 block w-full rounded-md border focus:ring-blue-500 p-1" placeholder="Your username" disabled />
                        </div>
           
                        <div>
                            <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-900">Phone Number</label>
                            <input asp-for="Input.PhoneNumber" class="mt-1 block w-full rounded-md border p-1 focus:border-blue-300 focus:ring-blue-300 focus:ring-1 focus:outline-none" placeholder="Your phone number" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-red-500"></span>

                        </div>
                        <button type="submit" class="inline-flex justify-center py-3 px-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">
                            Save
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>