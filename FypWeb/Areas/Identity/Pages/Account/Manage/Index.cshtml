@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-2xl font-semibold">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="flex flex-wrap">
    <div class="w-full md:w-1/2">
        <form id="profile-form" method="post" class="space-y-6">
            <div class="text-red-500" asp-validation-summary="ModelOnly" role="alert"></div>
            <div class="mb-3">
           
                <input asp-for="Username" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="block text-sm font-medium text-gray-700"></label>
            </div>
            <div class="mb-3">
                <input asp-for="Input.PhoneNumber" class="form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-red-500"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
