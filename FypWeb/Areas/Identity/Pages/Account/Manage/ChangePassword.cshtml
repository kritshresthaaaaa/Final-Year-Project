@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="p-4 rounded-md">
    <div class="max-w-md mx-auto">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" class="mt-1 block w-full rounded-md border focus:ring-blue-500 p-1" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
              
                <span asp-validation-for="Input.OldPassword" class="text-red-500"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="mt-1 block w-full rounded-md border focus:ring-blue-500 p-1" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
               
                <span asp-validation-for="Input.NewPassword" class="text-red-500"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="mt-1 block w-full rounded-md border focus:ring-blue-500 p-1" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500"></span>
            </div>
            <button type="submit" class="inline-flex justify-center py-3 px-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
